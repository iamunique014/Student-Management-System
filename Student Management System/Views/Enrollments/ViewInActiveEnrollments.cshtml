@model IEnumerable<Enrollment>

@{
    ViewData["Title"] = "View Deleted Enrollmets";
}

<h1 class="text-black  text-center py-4">Recover Deleted Enrollment</h1>
<hr />
<div class="my-4">
    <a asp-action="ViewEnrollments" class="btn btn-secondary">Go Back</a>
</div>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                Last Name
            </th>
            <th>
                First Name
            </th>
            <th>
                Course
            </th>
            <th>
                Grade
            </th>
            <th>
                Enrollment Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.LastName)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Title)
            </td>
            <td>
                    @(item.Grade.HasValue ? item.Grade.ToString() : "Pending")
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EnrollmentDate)
                </td>
            <td>
                    <a asp-action="EditEnrollment" asp-route-mode="Activate" class="btn btn-primary" asp-route-id="@item.EnrollmentID">Activate</a>
                
                <a asp-action="DeleteEnrollment" class="btn btn-danger" asp-route-id="@item.EnrollmentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
