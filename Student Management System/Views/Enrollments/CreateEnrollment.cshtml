@model             Enrollment

@{

    ViewData["Title"] = "Enrollments";
}

<h1>Enroll Student</h1>
<partial name="_StatusMessage" for="StatusMessage" />
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateEnrollment" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          @*   <input type="hidden" name="StudentID" value="@Model.StudentID" />
            <input type="hidden" name="CourseID" value="@Model.CourseID" /> *@
            <div class="form-group mb-4">
                <label asp-for="StudentID" class="control-label mb-3">Student</label>
                <select asp-for="StudentID" class="form-control" asp-items="ViewBag.Students"></select>
                <span asp-validation-for="StudentID" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="CourseID" class="control-label mb-3">Course</label>
                <select asp-for="CourseID" class="form-control" asp-items="ViewBag.Courses"></select>
                <span asp-validation-for="CourseID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Enroll" class="btn btn-primary" />
                <a asp-action="ViewEnrollments" class="btn btn-secondary ms-4">Go Back</a>
            </div>
            <h2>@ViewBag.Message</h2>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
