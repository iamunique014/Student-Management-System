@model             Student

@{
    ViewData["Title"] = "Create";
}

<h1>Create Student</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateStudent" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="LastName" class="control-label mb-2"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="FirstName" class="control-label mb-2"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
           
            <div class="form-group d-flex">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="ViewStudents" class="btn btn-secondary ms-4">Go Back</a>
                
            </div>
            <h2>@ViewBag.Message</h2>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
