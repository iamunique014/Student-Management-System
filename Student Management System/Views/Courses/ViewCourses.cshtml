
@model IEnumerable<Student_Management_System.Models.Course>

@{
    ViewData["Title"] = "Course";
}

<h1 class="text-black  text-center py-4">Manage Courses</h1>
<hr />
<div class="my-4">
    <a asp-action="CreateCourse" class="btn btn-primary">Create New</a>
    <a asp-controller="Home" asp-action="AdminMenu" class="btn btn-secondary ms-4">Go Back</a>
</div>
<div class="table-responsive" style="max-height: 415px; overflow-y: auto;">
    <table class="table table-striped table-hover">
        <thead class="table-warning py-5" style="position: sticky; top: 0; z-index: 10;">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Credits)
                </th>
                <th>Manage Course</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Credits)
                    </td>
                    <td>
                        <a asp-action="EditCourse" class="btn btn-primary" asp-route-id="@item.CourseID">Edit</a>
                        <a asp-action="DeleteCourse" class="btn btn-danger" asp-route-id="@item.CourseID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

